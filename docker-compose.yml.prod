---
version: "2.4"
services:
  web:
      image: tflatebo/unifi-parental-control:api-proxy
      ports:
        - "8051:80"
      volumes:
        - ./site.conf:/etc/nginx/conf.d/default.conf
      links:
        - php

  php:
      image: tflatebo/unifi-parental-control:api-php
      volumes:
        - ./log.ini:/usr/local/etc/php-fpm.d/zz-log.ini
        - ./api-variables.env:/app/.env
